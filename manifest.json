{
  "manifest_version": 3,
  "name": "YouTube Note-Taker",
  "version": "1.0",
  "description": "Take timestamped notes on YouTube videos",
  "permissions": ["storage", "scripting"],
  "content_scripts": [{
    "matches": ["*://www.youtube.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],
  "action": {
    "default_popup": "popup.html"
  }
}
